generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  address   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Books {
  id        String   @id @default(uuid())
  title     String
  price     Int
  desc      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
